package BaekJoon;

import java.util.Scanner;

public class B1712 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		int a = sc.nextInt();
		int b = sc.nextInt();
		int c = sc.nextInt();
		int saveB = b;
		int hap = 0;
		int num = 0;
		
		if(c <= b) {
			System.out.println(-1);
		}else {
			while(hap < (a+b)) {
				hap += c;
				b += saveB;
				num++;
			}
			System.out.println(num);
		}
	}

}
